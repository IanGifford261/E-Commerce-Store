@model List<DotnetEcommerceStore.Models.CartItems>
@using DotnetEcommerceStore.Models.Interfaces
@using DotnetEcommerceStore.Models.ViewModels

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/Styles/Cart.css" />

<div class="checkoutForm">
    <h2>Your Shopping Cart</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Quantity</th>
                <th>Product</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model)
            {
                <tr>
                    <td>@line.Quantity</td>
                    <td>@line.Product.Name</td>
                    <td>@line.Product.Price</td>
                    <td>@((line.Quantity * line.Product.Price).ToString("c"))</td>
                    <td><a asp-controller="Basket" asp-action="DeleteCartItem" asp-route-CartItemID="@line.CartItemsID"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>Total:</td>
                <td>@*@Model.CartTotal.ToString("c")*@</td>
            </tr>
        </tfoot>
    </table>
    <div>
        <a asp-controller="Order" asp-action="Checkout">Checkout</a>
    </div>
</div>