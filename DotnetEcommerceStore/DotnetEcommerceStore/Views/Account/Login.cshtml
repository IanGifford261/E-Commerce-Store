@model DotnetEcommerceStore.Models.ViewModels.LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/Styles/Account.css" />
<link rel="stylesheet" href="~/Styles/Login.css" />

<h1>Login</h1>
<div class="regform">
    <form method="post">
        <div asp-validation-summary="All" class="text-primary"></div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-primary"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-primary"></span>
        </div>

        <div class="form-group">
            <button type="submit">Login</button>
        </div>

        <div class="form-group">
            <a href="/Account/Register">Register as a new user</a>
        </div>

    </form>
</div>
