@model DotnetEcommerceStore.Models.ViewModels.LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/Styles/Account.css" />
<link rel="stylesheet" href="~/Styles/Login.css" />

<h1>Login</h1>

<form method="post" id="loginform">
    <div asp-validation-summary="All" class="text-primary"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email" class="text-primary"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password" class="text-primary"></span>

    <button type="submit">Login</button>
</form>