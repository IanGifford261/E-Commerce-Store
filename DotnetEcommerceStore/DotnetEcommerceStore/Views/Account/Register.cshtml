@model DotnetEcommerceStore.Models.ViewModels.RegisterViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/Styles/Register.css" />

<h1>Register</h1>

<form method="post" id="regform">
    <div asp-validation-summary="All" class="text-primary"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email" class="text-primary"></span>

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" />
    <span asp-validation-for="FirstName" class="text-primary"></span>

    <label asp-for="LastName"></label>
    <input asp-for="LastName" />
    <span asp-validation-for="LastName" class="text-primary"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password" class="text-primary"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword" class="text-primary"></span>

    <button type="submit">Register</button>
</form>